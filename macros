# -*- mode: muttrc -*-

# allow the meta key
set meta_key=yes

# <c>hange to <p>ersonal
macro  index,pager,browser .cp '<change-folder>=personal/INBOX<enter><enter-command>source ~/.mutt/personal.profile<enter>'
# <c>hange to <w>ork
macro index,pager,browser .cw '<change-folder>=puppet.com/INBOX<enter><enter-command>source ~/.mutt/puppet.profile<enter>'

# see all the urls in a message
# which is becoming more and more god-awful
macro index,pager .u |/usr/local/bin/urlview

# .r reloads our configuration
macro index,browser .r "<enter-command>source ~/.muttrc<enter>"

macro index .sn "l ^a^k~N\n" "Show unread/new only"
macro index .sa "l ^a^kall\n" "show all"
macro index .C "<esc>V"  "toggle threads"
macro index .si "l ~n10-100\n" "show interesting"
macro index .sb "l ~n<11\n" "show not so interesting"
macro index .rs "<enter-command>source ~/.mutt/scores<enter>" # reprocess scores
macro index .sf "l ~F\n" # show flagged
macro index .hl "l ^a^k!~l\n" # hide lists
macro index,pager,browser .of "<pipe-message>~/.mutt/mutt2omnifocus.rb<enter>" # send message to omnifocus
macro index .to "T ~d>7d\n" # "tag old" -- messages older than 7 days
macro index .ab    "<pipe-entry>/usr/local/bin/lbdb-fetchaddr\n"                # Store address details in lbdb.

# mutt 2 org mode
macro index \eR "h<enter><pipe-entry>~/.mutt/remember_mail.rb\n<enter>h<enter>" # pipe into remember mail

# Ctrl-R to mark all as read
macro index \Cr "T~U<enter><tag-prefix><clear-flag>N<untag-pattern>.<enter>" "mark all messages as read"

# Sync email
macro index O "<shell-escape>offlineimap<enter>"           "run offlineimap to sync all mail"

# search with notmuch
macro index S "<enter-command>unset wait_key<enter><shell-escape>mutt-notmuch-py ~/.mail/temporary/search<enter><change-folder-readonly>+temporary/search<enter>" "search mail (using notmuch)"

macro index,pager .sp "<pipe-entry>~/.mutt/scoremail.rb +10<enter><enter-command>source ~/.mutt/scores<enter>" # score sender +10
macro index,pager .sk "<pipe-entry>~/.mutt/scoremail.rb -20<enter><enter-command>source ~/.mutt/scores<enter><delete-message>" # score sender -20

