# -*- muttrc -*-
# Mutt Hooks File (4/9/04)

### hooks (these are used to set variables based on message content)
message-hook '~t @socialmediatoday.com'	'source ~/.mutt/profile.smt'
message-hook '~t puddingbowl.org'	'source ~/.mutt/profile.personal'

# send hooks
send-hook '~t @socialmediatoday\.com' 'source ~/.mutt/profile.smt'

